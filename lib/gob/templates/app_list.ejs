<h3>Apps</h3>
<button id="new-app" class="btn btn-primary" data-toggle="modal" data-target="#newAppModal">
  New app
</button>
<% _.each(models, function(item) { %>
  <div class="media">
    <a class="pull-left" href="/apps/<%= item.attributes.name %>">
      <img class="media-object" src="/apps/<%= item.attributes.name %>/thumb"
           alt="<%= item.attributes.title %>" height="200" width="355">
    </a>
    <div class="media-body">
      <h4 class="media-heading">
        <%= item.attributes.name %>
        <% if(item.attributes.status == 'ready') { %>
        <span class="label label-success"><%= item.attributes.status %></span>
        <% } else { %>
        <span class="label label-error"><%= item.attributes.status %></span>
        <% } %></h4>
      <p><strong>Repo:</strong> <input value="<%= item.attributes.repo_url %>"></p>
      <p><%= item.attributes.description %></p>
      <p><button class="btn btn-danger"
                 data-action="delete" data-model="App"
                 data-model-id="<%= item.attributes.name %>">
        Delete</button></p>
    </div>
  </div>
<% }) %>

<!-- Modal -->
<div class="modal fade" id="newAppModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="new-app" role="form" data-model="App" data-action="new">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">New App</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="exampleInputEmail1">Name of the new app</label>
          <input type="text" required class="form-control"
                 id="name" name="name" placeholder="Enter name"
                 pattern="[a-z]([-_]?[a-z0-9]+){2,}">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
      </form>
    </div>
  </div>
</div>
